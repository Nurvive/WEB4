@model Project
@{
    ViewData["Title"] = "Редактировать проект";
}
<div>
    <h1>@ViewData["Title"]</h1>
    <div>
        <form id="form" asp-controller="Project" asp-action="Edit" method="post">
            <input type="hidden" asp-for="id"/>
            <div asp-validation-summary="All"></div>

            <div class="div-box">
                <label asp-for="name"></label>
                <input asp-for="name"/>
                <span asp-validation-for="name"></span>
            </div>
            <div class="div-box">
                <label asp-for="customer"></label>
                <input asp-for="customer"/>
                <span asp-validation-for="customer"></span>
            </div>
            <div class="div-box">
                <label asp-for="executor"></label>
                <input asp-for="executor"/>
                <span asp-validation-for="executor"></span>
            </div>
            @if (ViewBag.workers != null)
            {
                <div>
                    <label asp-for="directorId">Director</label>
                    <select asp-for="directorId" asp-items=@ViewBag.workers>
                    </select>
                    <span asp-validation-for="directorId"></span>
                </div>
            }
            <div class="div-box">
                <label asp-for="priority"></label>
                <input type="number" min="1" asp-for="priority"/>
                <span asp-validation-for="priority"></span>
            </div>
            <div class="div-box">
                <label asp-for="start"></label>
                <input value="2023-01-01" min="2023-01-01" type="date" asp-for="start"/>
                <span asp-validation-for="start"></span>
            </div>
            <div class="div-box">
                <label asp-for="end"></label>
                <input value="2023-01-01" min="2023-01-01" type="date" asp-for="end"/>
                <span asp-validation-for="end"></span>
            </div>
            <div class="div-box">
                @if (ViewBag.workers != null)
                {
                    <div>
                        <label asp-for="workers">Workers</label>
                        <select multiple asp-for="workers" asp-items=@ViewBag.workers>
                            <option selected value="00000000-0000-0000-0000-000000000000">--Select--</option>
                        </select>
                        <span asp-validation-for="workers"></span>
                    </div>
                }
            </div>
            <button type="submit">Сохранить</button>
        </form>
    </div>
</div>